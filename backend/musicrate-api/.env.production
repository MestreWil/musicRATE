# ========================================
# PRODUÇÃO - RAILWAY
# ========================================
APP_NAME=MusicRate
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=${APP_URL}

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# ========================================
# BANCO DE DADOS - RAILWAY POSTGRESQL
# ========================================
# Railway injeta automaticamente estas variáveis:
# - DATABASE_URL (connection string completa)
# - PGHOST, PGPORT, PGDATABASE, PGUSER, PGPASSWORD
# 
# Use as variáveis fornecidas pelo Railway:
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# ========================================
# SESSÃO - PRODUÇÃO (HTTPS)
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none
SESSION_HTTP_ONLY=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_DRIVER=database

MAIL_MAILER=log

# ========================================
# SPOTIFY API CREDENTIALS
# ========================================
SPOTIFY_CLIENT_ID=${SPOTIFY_CLIENT_ID}
SPOTIFY_CLIENT_SECRET=${SPOTIFY_CLIENT_SECRET}
SPOTIFY_REDIRECT_URI=${APP_URL}/api/auth/callback

# ========================================
# FRONTEND URL - CORS
# ========================================
FRONTEND_URL=${FRONTEND_URL}

# ========================================
# SANCTUM - STATEFUL DOMAINS
# ========================================
SANCTUM_STATEFUL_DOMAINS=${FRONTEND_URL}
