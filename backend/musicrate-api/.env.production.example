# ========================================
# CONFIGURAÇÃO DE PRODUÇÃO - MusicRATE API
# ========================================
# IMPORTANTE: Copie este arquivo para .env e ajuste os valores para seu ambiente de produção

APP_NAME=MusicRate
APP_ENV=production
APP_KEY=base64:SEU_APP_KEY_AQUI_GERADO_COM_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://api.seudominio.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# BANCO DE DADOS - POSTGRESQL
# ========================================
DB_CONNECTION=pgsql
DB_HOST=seu-db-host.com
DB_PORT=5432
DB_DATABASE=musicrate_production
DB_USERNAME=seu_usuario_db
DB_PASSWORD=sua_senha_segura_aqui

# ========================================
# SESSÃO - Não é mais necessário para autenticação (usa Sanctum tokens)
# Mantido apenas para funcionalidades secundárias se necessário
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_DRIVER=redis

MEMCACHED_HOST=127.0.0.1

# ========================================
# REDIS - RECOMENDADO PARA PRODUÇÃO
# ========================================
REDIS_CLIENT=phpredis
REDIS_PASSWORD=null
REDIS_HOST=seu-redis-host.com
REDIS_PORT=6379

# ========================================
# EMAIL - CONFIGURE SEU PROVEDOR
# ========================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.seuservidor.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@seudominio.com
MAIL_PASSWORD=sua_senha_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@seudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# SPOTIFY API - USE SUAS CREDENCIAIS DE PRODUÇÃO
# ========================================
SPOTIFY_CLIENT_ID=seu_client_id_producao
SPOTIFY_CLIENT_SECRET=seu_client_secret_producao
SPOTIFY_REDIRECT_URI=https://api.seudominio.com/api/auth/callback

# ========================================
# FRONTEND URL - CORS
# ========================================
FRONTEND_URL=https://seudominio.com

# ========================================
# SANCTUM - AUTENTICAÇÃO COM BEARER TOKENS
# ========================================
# Com a nova implementação, não é mais necessário configurar stateful domains
# A autenticação usa Bearer tokens em localStorage (não cookies)
# Deixe vazio ou remova completamente
SANCTUM_STATEFUL_DOMAINS=

# ========================================
# AWS S3 - OPCIONAL PARA ARMAZENAMENTO DE ARQUIVOS
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
